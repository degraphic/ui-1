{
    "schema": [
        "recordlist",
        "recordtypes",
        "cataloging"
    ],
    "pageType": "cataloging",
    "recordType": "cataloging",
    "dataContext": {
        "options": {
            "recordType": "cataloging" 
        } 
    },
    "pageSpec": {
        "recordEditor": {
            "href": "%readonlyCatalogingTemplate.html",
            "templateSelector": ".csc-cataloging-template",
            "targetSelector": ".csc-record-edit-container" 
        },
        "footer": {
            "href": "footer.html",
            "templateSelector": ".csc-footer",
            "targetSelector": ".csc-footer-container" 
        } 
    },
    "selectors": {
        "recordEditor": ".csc-cataloging-template"
    },
    "components": {
        "tabs": {
            "type": "cspace.tabs"
        },
        "titleBar": {
            "type": "cspace.titleBar",
            "options": {
                "fields": [
                    "fields.objectNumber", {
                    "type": "repeatableMatch",
                    "queryPath": "fields.titleGroup",
                    "childPath": "_primary",
                    "value": true,
                    "path": "title"
                }]
            }
        },
        "recordEditor": {
            "type":  "cspace.recordEditor",
            "options": {
                "selectors": {
                    "identificationNumber": ".csc-object-identification-object-number" 
                },
                "strings": {
                    "identificationNumberRequired": "Please specify an Identification Number" 
                },
                "dataContext": "{pageBuilder}.dataContext",
                "applier": "{pageBuilder}.applier",
                "uispec": "{pageBuilder}.uispec.recordEditor",
                "model": "{pageBuilder}.model"
            }
        },
        "sidebar": {
            "type": "cspace.sidebar"
        }
    }
}