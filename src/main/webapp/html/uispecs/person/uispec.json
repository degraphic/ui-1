{
    "sidebar": {
        "relatedObjects": {
            ".csc-recordList-row:": {
                "children": [
                    {
                        ".csc-related-summary": "${items.0.summary}",
                        ".csc-related-number": {
                            "linktext": "${items.0.number}",
                            "target": "${items.0.recordtype}.html?csid=${items.0.csid}"
                        }
                    }
                ]
            }
        },
        "relatedProcedures": {
            ".csc-recordList-row:": {
                "children": [
                    {
                        ".csc-related-summary": "${items.0.summary}",
                        ".csc-related-number": {
                            "linktext": "${items.0.number}",
                            "target": "${items.0.recordtype}.html?csid=${items.0.csid}"
                        },
                        ".csc-related-recordtype": "${items.0.recordtype}"
                    }
                ]
            }
        },
        "termsUsed": {
            ".csc-recordList-row:": {
                "children": [
                    {
                        ".csc-related-number": {
                            "linktext": "${items.0.number}",
                            "target": "${items.0.recordtype}.html?csid=${items.0.csid}"
                        },
                        ".csc-related-field": "${items.0.sourceFieldName}",
                        ".csc-related-recordtype": "${items.0.recordtype}"
                    }
                ]
            }
        }
    },
    "titleBar": {
        ".csc-titleBar-displayName": "${fields.displayName}",
        ".csc-titleBar-birthDate": "${fields.birthDate}",
        ".csc-titleBar-deathDate": "${fields.deathDate}"
    },
    "recordEditor": {
        ".csc-personAuthority-name": {
            "decorators": [
                {
                    "func": "cspace.makeRepeatable",
                    "type": "fluid",
                    "options": {
                        "elPath": "fields.names",
                        "protoTree": {
                            ".csc-personAuthority-salutation": {
                                "optionnames": [
                                    "Dear",
                                    "My Darling",
                                    "Your Majaesty",
                                    "Your Royal Highness"
                                ],
                                "optionlist": [
                                    "Dear",
                                    "My Darling",
                                    "Your Majaesty",
                                    "Your Royal Highness"
                                ],
                                "selection": "${fields.names.0.salutation}"
                            },
                            ".csc-personAuthority-title": {
                                "optionnames": [
                                    "Mr",
                                    "Mrs",
                                    "Ms",
                                    "Miss",
                                    "Dr",
                                    "Professor",
                                    "Sir",
                                    "Dame",
                                    "Baron",
                                    "Baroness",
                                    "Lord",
                                    "Lady"
                                ],
                                "optionlist": [
                                    "Mr",
                                    "Mrs",
                                    "Ms",
                                    "Miss",
                                    "Dr",
                                    "Professor",
                                    "Sir",
                                    "Dame",
                                    "Baron",
                                    "Baroness",
                                    "Lord",
                                    "Lady"
                                ],
                                "selection": "${fields.names.0.title}"
                            },
                            ".csc-personAuthority-foreName": "${fields.names.0.foreName}",
                            ".csc-personAuthority-middleName": "${fields.names.0.middleName}",
                            ".csc-personAuthority-surName": "${fields.names.0.surName}",
                            ".csc-personAuthority-nameAdditions": "${fields.names.0.nameAdditions}",
                            ".csc-personAuthority-initials": "${fields.names.0.initials}"
                        }
                    }
                }
            ]
        },
        ".csc-personAuthority-nameNote": "${fields.nameNote}",
        ".csc-personAuthority-deathPlace": "${fields.deathPlace}",
        ".csc-personAuthority-status": {
            "default": "0",
            "optionnames": [
                "Provisional",
                "Under Review",
                "Accepted",
                "Rejected"
            ],
            "optionlist": [
                "provisional",
                "under review",
                "accepted",
                "rejected"
            ],
            "selection": "${fields.status}"
        },
        ".csc-personAuthority-birthDate": "${fields.birthDate}",
        ".csc-personAuthority-nationality-autocomplete": {
            "decorators": [
                {
                    "func": "cspace.autocomplete",
                    "type": "fluid",
                    "options": {
                        "queryUrl": "../../chain/vocabularies/person/autocomplete/nationality",
                        "vocabUrl": "../../chain/vocabularies/person/source-vocab/nationality"
                    }
                }
            ]
        },
        ".csc-personAuthority-gender": {
            "optionnames": [
                "Male",
                "Female"
            ],
            "optionlist": [
                "male",
                "female"
            ],
            "selection": "${fields.gender}"
        },
        ".csc-personAuthority-birthPlace-autocomplete": {
            "decorators": [
                {
                    "func": "cspace.autocomplete",
                    "type": "fluid",
                    "options": {
                        "queryUrl": "../../chain/vocabularies/person/autocomplete/birthPlace",
                        "vocabUrl": "../../chain/vocabularies/person/source-vocab/birthPlace"
                    }
                }
            ]
        },
        ".csc-personAuthority-occupation": "${fields.occupation}",
        ".csc-personAuthority-displayName": "${fields.displayName}",
        ".csc-personAuthority-group-autocomplete": {
            "decorators": [
                {
                    "func": "cspace.autocomplete",
                    "type": "fluid",
                    "options": {
                        "queryUrl": "../../chain/vocabularies/person/autocomplete/group",
                        "vocabUrl": "../../chain/vocabularies/person/source-vocab/group"
                    }
                }
            ]
        },
        ".csc-personAuthority-birthDate-container": {
            "decorators": [
                {
                    "func": "cspace.datePicker",
                    "type": "fluid"
                }
            ]
        },
        ".csc-personAuthority-deathDate": "${fields.deathDate}",
        ".csc-personAuthority-group": "${fields.group}",
        ".csc-personAuthority-birthPlace": "${fields.birthPlace}",
        ".csc-personAuthority-nationality": "${fields.nationality}",
        ".csc-personAuthority-bioNote": "${fields.bioNote}",
        ".csc-personAuthority-occupation-autocomplete": {
            "decorators": [
                {
                    "func": "cspace.autocomplete",
                    "type": "fluid",
                    "options": {
                        "queryUrl": "../../chain/vocabularies/person/autocomplete/occupation",
                        "vocabUrl": "../../chain/vocabularies/person/source-vocab/occupation"
                    }
                }
            ]
        },
        ".csc-personAuthority-deathPlace-autocomplete": {
            "decorators": [
                {
                    "func": "cspace.autocomplete",
                    "type": "fluid",
                    "options": {
                        "queryUrl": "../../chain/vocabularies/person/autocomplete/deathPlace",
                        "vocabUrl": "../../chain/vocabularies/person/source-vocab/deathPlace"
                    }
                }
            ]
        },
        ".csc-personAuthority-deathDate-container": {
            "decorators": [
                {
                    "func": "cspace.datePicker",
                    "type": "fluid"
                }
            ]
        }
    }
}