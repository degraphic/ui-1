{
    "list": {
        ".csc-recordList-row:": {
            "children": [
                {
                    ".csc-role-roleList-name": "${items.0.roleName}",
                    ".csc-role-roleList-csid": "${items.0.csid}"
                }
            ]
        }
    },
    "details": {
        ".csc-role-group": "${fields.groupName}",
        ".csc-role-name": "${fields.roleName}",
        ".csc-role-description": "${fields.description}",
        ".csc-permissions-record-row:": {
            "children": [
                {
                    ".csc-permissions-record-permissions": {
                        "selection": "${fields.permissions.0.permission}",
                        "optionlist": ["none", "read","write", "delete"],
                        "optionnames": ["none", "read","write", "delete"],
                        "default": "write"
                    },
                    ".csc-permissions-record-type": "${fields.permissions.0.recordType}"
                }
            ]
        }
    }
}