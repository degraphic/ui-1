{
    "schema": [
        "recordlist",
        "recordtypes",
        "person"
    ],
    "recordType": "person",
    "dataContext": {
        "options": {
            "recordType": "person",
            "baseUrl": "../../chain/vocabularies" 
        } 
    },
    "pageSpec": {
        "recordEditor": {
            "href": "%readonlypages/PersonTemplate.html",
            "templateSelector": ".csc-personAuthority-template",
            "targetSelector": ".csc-record-edit-container"
        },
        "footer": {
            "href": "components/footer.html",
            "templateSelector": ".csc-footer",
            "targetSelector": ".csc-footer-container" 
        } 
    },
    "pageType": "person",
    "selectors": {
        "recordEditor": ".csc-personAuthority-template"
    },
    "components": {
        "tabs": {
            "type": "cspace.tabs"
        },
        "titleBar": {
            "type": "cspace.titleBar",
            "options": {
                "fields": [
                    "fields.displayName"
                ]
            }
        },
        "recordEditor": {
            "type":  "cspace.recordEditor",
            "options": {
                "selectors": {
                    "identificationNumber": ".csc-personAuthority-displayName"
                },
                "strings": {
                    "identificationNumberRequired": "Please specify a Display Name"
                },
                "dataContext": "{pageBuilder}.dataContext",
                "applier": "{pageBuilder}.applier",
                "uispec": "{pageBuilder}.uispec.recordEditor",
                "model": "{pageBuilder}.model"
            }
        },
        "sidebar": {
            "type": "cspace.sidebar"
        }
    }
}