{
    "pageSpec": {
        "footer": {
            "href": "components/footer.html",
            "templateSelector": ".csc-footer",
            "targetSelector": ".csc-footer-container" 
        } 
    },
    "selectors": {
        "myCollectionSpace": ".csc-myCollectionSpace-container"
    },
    "components": {
        "pivotSearch": {
            "type": "cspace.searchBox",
            "options": {
                "strings": {
                    "recordTypeSelectLabel": "Record Type"
                },
                "related": "all",
                "selfRender": true
            }
        },
        "myCollectionSpace": {
            "type": "cspace.myCollectionSpace",
            "options": {
                "uispec": "{pageBuilder}.uispec",
                "schema": "{pageBuilder}.schema"
            }
        },
        "header": {
            "type": "cspace.header",
            "options": {
                "schema": "{pageBuilder}.schema",
                "permissions": "{pageBuilder}.permissions"
            }
        }
    },
    "pageType": "myCollectionSpace"
}