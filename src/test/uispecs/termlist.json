{
    "details": {
        ".csc-termlist-name": "${fields.name}",
        ".csc-termlist-source": "${fields.source}",
        ".csc-termlist-description": "${fields.description}",
        ".csc-termlist-terms": {
            "decorators": [
                {
                    "func": "cspace.makeRepeatable",
                    "type": "fluid",
                    "options": {
                        "elPath": "fields.terms",
                        "protoTree": {
                            "expander": {
                                "tree": {
                                    "expander": {
                                        "repeatID": "repeat:",
                                        "tree": {
                                            ".csc-termlist-termName": "${{row}.name}",
                                            ".csc-termlist-termDescription": "${{row}.description}",
                                            ".csc-termlist-termSource": "${{row}.source}",
                                            ".csc-termlist-termSourcePage": "${{row}.sourcePage}",
                                            ".csc-termlist-termStatus": {
                                                "optionnames": [
                                                    "Active",
                                                    "Inactive"
                                                ],
                                                "optionlist": [
                                                    "active",
                                                    "inactive"
                                                ],
                                                "selection": "${{row}.status}"
                                            }
                                        },
                                        "type": "fluid.renderer.repeat",
                                        "pathAs": "row",
                                        "controlledBy": "fields.terms"
                                    }
                                },
                                "type": "fluid.noexpand"
                            }
                        }
                    }
                }
            ]
        },
        "expander": [
            {
                "repeatID": ".csc-termlist-usedBy:",
                "tree": {
                    "decorators": {
                        "classes": "cs-termlist-usedBy",
                        "type": "addClass"
                    },
                    "value": "${{row}.usedBy}"
                },
                "type": "fluid.renderer.repeat",
                "pathAs": "row",
                "controlledBy": "fields.usedBy"
            }
        ]
    }
}